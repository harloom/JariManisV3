<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.app.jarimanis.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_thread_navigation"
            app:destination="@id/thread_navigation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:launchSingleTop="false"
            app:popUpTo="@+id/navigation_home"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.app.jarimanis.ui.dashboard.DashboardFragment"

        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_pengaturanAkunFragment"
            app:destination="@id/pengaturanAkunFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_navigation_dashboard_to_threadDetailFragment2"
            app:destination="@id/threadDetailFragment2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.app.jarimanis.ui.notifications.NotificationsFragment"

        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_threadDetailFragment2"
            app:destination="@id/threadDetailFragment2"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.app.jarimanis.ui.chat.ChatFragment"

        tools:layout="@layout/fragment_chats" >
        <action
            android:id="@+id/action_navigation_chat_to_chat_navigation"
            app:destination="@id/chat_navigation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/navigation_chat" />
    </fragment>

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.app.jarimanis.ui.more.MoreFragment"

        tools:layout="@layout/fragment_mores" />
    <include app:graph="@navigation/thread_navigation" />
    <include app:graph="@navigation/chat_navigation" />
    <fragment
        android:id="@+id/pengaturanAkunFragment"
        android:name="com.app.jarimanis.ui.PengaturanAkun.PengaturanAkunFragment"
        tools:layout="@layout/pengaturan_akun_fragment">

    </fragment>
    <fragment
        android:id="@+id/threadDetailFragment2"
        android:name="com.app.jarimanis.ui.thread.detail.ThreadDetailFragment"
        tools:layout="@layout/thread_detail_fragment" >
        <argument
            android:name="secret-thread"
            app:argType="com.app.jarimanis.data.datasource.models.thread.Doc" />
        <argument
            android:name="id-thread"
            app:argType="string" />

    </fragment>
</navigation>