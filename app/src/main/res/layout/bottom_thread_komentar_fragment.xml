<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:text="Diskusi"
        android:textColor="@color/colorHitam"
        android:textSize="18sp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/balasanLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:hintEnabled="false"
        app:endIconMode="custom"
        android:paddingBottom="30dp"
        android:layout_below="@id/tv_title"
        app:boxStrokeWidth="0dp"
        app:boxStrokeColor="@color/secondaryColor"
        app:endIconTint="@color/primaryDarkColor"
        app:endIconDrawable="@drawable/ic_send">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etKomentar"
            android:background="@drawable/edit_text_rounded_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/komentar"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:textColor="#454545"
            android:textSize="14sp" />


    </com.google.android.material.textfield.TextInputLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_commentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/balasanLayout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balasanLayout" />
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/balasanLayout"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:auto_start="true"
        app:duration="1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/shimmer_category"/>
            <include layout="@layout/shimmer_category"/>
        </LinearLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>